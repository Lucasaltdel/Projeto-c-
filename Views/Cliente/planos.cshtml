                <tr>
                    <td>Modelos Pré-Definidos</td>
                    <td>✔</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <td>Up-Grade De Plano</td>
                    <td>✔</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <td>Alterações Personalizadas</td>
                    <td></td>
                    <td></td>
                    <td>✔</td>
                </tr>
                <tr>
                    <td>Cancelamento Sem Taxa</td>
                    <td></td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <td>Suporte</td>
                    <td>✔</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <td>Alteração Sem Custo</td>
                    <td></td>
                    <td></td>
                    <td>✔</td>
                </tr>
            </tbody>
        </table>
