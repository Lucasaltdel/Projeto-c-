    <title>Planos</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <section class="planos">
        <h1>PLANOS</h1>
        <div class="cards-container">
            <div class="card">
                <h2>COMUM</h2>
                <p class="preco">$150</p>
                <ul>
                    <li>Modelos Pré-Definidos</li>
                    <li>Up-Grade De Plano</li>
                    <li>Suporte</li>
                    <br>
                </ul>
                <a asp-controller="Cliente" asp-action="Finalizacao"><button>ESCOLHER</button></a>
            </div>

            <div class="card">
                <h2>PREMIUM</h2>
                <p class="preco">$500</p>
                <ul>
                    <li>Modelos Pré-Definidos</li>
                    <li>Cancelamento Sem Taxa</li>
                    <li>Up-Grade De Plano</li>
                    <li>Suporte</li>
                </ul>
                <a asp-controller="Cliente" asp-action="Finalizacao"><button>ESCOLHER</button></a>
            </div>

            <div class="card">
                <h2>PRO</h2>
                <p class="preco">$1200</p>
                <ul>
                    <li>Modelos Pré-Definidos</li>
                    <li>Alterações Personalizadas</li>
                    <li>Cancelamento Sem Taxa</li>
                    <li>Suporte</li>

                </ul>
               <a asp-controller="Cliente" asp-action="Finalizacao"><button>ESCOLHER</button></a>
            </div>
        </div>
    </section>

